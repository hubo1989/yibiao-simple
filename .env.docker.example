# AI 写标书助手 Docker 部署配置
# 复制此文件为 .env 并修改配置值

# ==================== 数据库配置 ====================
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_NAME=yibiao

# ==================== 安全配置 ====================
# JWT 密钥：生成方式 `openssl rand -hex 32`
SECRET_KEY=your_secret_key_here_generate_with_openssl_rand_hex_32

# 数据加密密钥：用于加密 API Keys 等敏感数据
# 生成方式 `openssl rand -hex 32`
ENCRYPTION_KEY=your_encryption_key_here_generate_with_openssl_rand_hex_32

# ==================== 应用配置 ====================
# 调试模式（生产环境请设为 false）
DEBUG=false

# 默认 OpenAI 模型
DEFAULT_MODEL=gpt-3.5-turbo

# ==================== 认证配置 ====================
# 访问令牌过期时间（分钟）
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 刷新令牌过期时间（天）
REFRESH_TOKEN_EXPIRE_DAYS=7

# ==================== CORS 配置 ====================
# 允许的跨域来源，多个用逗号分隔
CORS_ORIGINS=http://localhost,http://localhost:80,https://yourdomain.com

# ==================== 端口配置 ====================
# Nginx 对外暴露端口
PORT=80

# ==================== 可选：外部 OpenAI 配置 ====================
# 如果需要，可以在这里配置 OpenAI API Key
# OPENAI_API_KEY=sk-your-openai-api-key
